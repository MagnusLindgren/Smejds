@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row main-box">
    <div class="col-4 friend-box">
        <div class="friend-box-info">
            <h3>Vänner</h3>
            <!-- Button trigger modal -->
            <button type="button" class="add-friend-btn" data-toggle="modal" data-target="#exampleModalCenter">
                <svg viewBox="0 0 24 24" width="24" height="24" stroke="#fff" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="container px-0">
                            <ul class="nav nav-pills mb-3 row no-gutters text-center" id="pills-tab" role="tablist">
                                <li class="col nav-item">
                                    <a class="nav-link active" id="add-friend-tab" data-toggle="pill" href="#add-friend" role="tab" aria-controls="add-friend" aria-selected="true">Add friend</a>
                                </li>
                                <li class="col nav-item">
                                    <a class="nav-link" id="join-group-tab" data-toggle="pill" href="#join-group" role="tab" aria-controls="join-group" aria-selected="false">Join group</a>
                                </li>
                                <li class="col nav-item">
                                    <a class="nav-link" id="create-group-tab" data-toggle="pill" href="#create-group" role="tab" aria-controls="create-group" aria-selected="false">Create group</a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="add-friend" role="tabpanel" aria-labelledby="add-friend-tab">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalCenterTitle">Add friend</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="add-friend-name">Username</label>
                                        <input type="text" class="form-control" id="add-friend-name" placeholder="Enter username">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary">Add friend</button>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="join-group" role="tabpanel" aria-labelledby="join-group-tab">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalCenterTitle">Join group</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="join-group-name">Group name</label>
                                        <input type="text" class="form-control" id="join-group-name" placeholder="Enter group name">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary">Join group</button>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="create-group" role="tabpanel" aria-labelledby="create-group-tab">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalCenterTitle">Create group</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="create-group-name">Group name</label>
                                        <input type="text" class="form-control" id="create-group-name" placeholder="Enter group name">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary">Create group</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex">
            <div class="profile-pic-content">
                <div class="profile-pic">
                    <img src="https://res.cloudinary.com/crunchbase-production/image/upload/c_lpad,f_auto,q_auto:eco/v1440924046/wi1mlnkbn2jluko8pzkj.png" alt="Discord" />
                </div>
            </div>
            <div class="friend-content">
                <div>
                    <p class="friend-name">Kalle Persson</p>
                </div>
                <div class="friend-msg-content">
                    <p class="friend-msg">Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-8 chat-box-main ">
        <div class="position-relative h-100">
            <div class="chat-friend position-absolute w-100">
                <div class="chat-friend-background"></div>
                <div class="profile-pic-content-L">
                    <img src="https://res.cloudinary.com/crunchbase-production/image/upload/c_lpad,f_auto,q_auto:eco/v1440924046/wi1mlnkbn2jluko8pzkj.png" alt="Discord" crossorigin="anonymous" />
                    <p class="friend-name-large">Kalle Persson</p>
                </div>
            </div>
            <div id="chatBox" class="chat-box">
            </div>
            <div class="chat-text position-absolute w-100">
                <textarea id="txtChatBox" rows="1"></textarea>
            </div>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
